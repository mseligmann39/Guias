{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar Proyectos", // Un nombre para tu tarea
            "dependsOn": [
                "Terminal Frontend",
                "Terminal Backend"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true // Esto hace que se ejecute automáticamente al abrir el workspace
            }
        },
        {
            "label": "Terminal Frontend",
            "type": "shell",
            "command": "cd frontend && npm run dev", // Tus comandos para el frontend
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}" // Asegúrate de que el directorio de trabajo sea la raíz del workspace
            },
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            },
            "presentation": {
                "group": "miGrupoDeTerminales",
                "panel": "shared",
                "reveal": "always",
                "clear": true
            }
        },
        {
            "label": "Terminal Backend",
            "type": "shell",
            "command": "cd backend && php artisan serve", // Tus comandos para el backend
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true
            },
            "presentation": {
                "group": "miGrupoDeTerminales",
                "panel": "shared",
                "reveal": "always",
                "clear": true
            }
        }
    ]
}